<!-- app/views/posts/index.html.erb -->
<!-- トップページ：投稿一覧 -->

<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>SimpleBlog - シンプルなブログシステム</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <style>
    body {
      background-color: #f8f9fa;
    }
    .header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 3rem 0;
      margin-bottom: 2rem;
    }
    .post-card {
      transition: transform 0.2s, box-shadow 0.2s;
      cursor: pointer;
      height: 100%;
    }
    .post-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    .post-title {
      color: #333;
      text-decoration: none;
      font-weight: 600;
    }
    .post-title:hover {
      color: #667eea;
    }
    .post-date {
      color: #6c757d;
      font-size: 0.9rem;
    }
    /* ヘッダーのボタンホバー効果 */
    .header .btn-light:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
      transition: all 0.2s;
    }
    .header .btn-outline-light:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
      transition: all 0.2s;
    }
  </style>
</head>

<body>
  <!-- ヘッダー -->
  <div class="header">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-8">
          <h1 class="display-4 mb-0">SimpleBlog</h1>
          <p class="lead mb-0">シンプルで使いやすいブログシステム</p>
        </div>
        <div class="col-md-4 text-md-end mt-3 mt-md-0">
          <% if user_signed_in? %>
            <div class="d-inline-flex gap-2">
              <%= link_to '管理画面', admin_posts_path, class: 'btn btn-light' %>
              <%= button_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'btn btn-outline-light', form: { style: 'display: inline-block;' } %>
            </div>
          <% else %>
            <%= link_to '管理画面ログイン', new_user_session_path, class: 'btn btn-light' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- フラッシュメッセージ -->
  <% if flash.any? %>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert <%= flash_class(key) %> alert-dismissible fade show" role="alert">
          <%= value %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- メインコンテンツ -->
  <div class="container">
    <% if @posts.any? %>
      <div class="row g-4">
        <% @posts.each do |post| %>
          <div class="col-md-6 col-lg-4">
            <%= link_to post_path(post), class: 'text-decoration-none' do %>
              <div class="card post-card">
                <div class="card-body">
                  <h5 class="post-title card-title"><%= post.title %></h5>
                  <p class="post-date">
                    <i class="bi bi-calendar3"></i>
                    <%= post.created_at.strftime('%Y年%m月%d日') %>
                  </p>
                  <p class="card-text text-muted">
                    <%= truncate(post.content.gsub(/[#*`\[\]\(\)\-]/, ''), length: 100) %>
                  </p>
                </div>
                <div class="card-footer bg-white border-0">
                  <small class="text-muted">
                    <i class="bi bi-person"></i> <%= post.user.email.split('@').first %>
                  </small>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-5">
        <div class="alert alert-info d-inline-block">
          <h4><i class="bi bi-info-circle"></i> まだ投稿がありません</h4>
          <p class="mb-0">管理画面から最初の投稿を作成してください。</p>
        </div>
      </div>
    <% end %>
  </div>

  <!-- フッター -->
  <footer class="mt-5 py-4 bg-white border-top">
    <div class="container text-center text-muted">
      <p class="mb-0">&copy; 2025 SimpleBlog. All rights reserved.</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
