<!-- app/views/admin/posts/index.html.erb -->
<!-- 管理画面：投稿一覧 -->

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>投稿一覧</h1>
  <%= link_to '新規投稿', new_admin_post_path, class: 'btn btn-primary' %>
</div>

<% if @posts.any? %>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="table-light">
        <tr>
          <th style="width: 10%;">ID</th>
          <th style="width: 40%;">タイトル</th>
          <th style="width: 15%;">投稿者</th>
          <th style="width: 15%;">投稿日時</th>
          <th style="width: 20%;" class="text-center">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td>
              <%= link_to post.title, post_path(post), class: 'text-decoration-none', target: '_blank' %>
            </td>
            <td><%= post.user.email %></td>
            <td><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <td class="text-center">
              <%= link_to '編集', edit_admin_post_path(post), class: 'btn btn-sm btn-outline-primary me-2' %>
              <%= link_to '削除', admin_post_path(post), 
                  method: :delete,
                  data: { 
                    turbo_method: :delete,
                    turbo_confirm: "「#{post.title}」を削除してもよろしいですか？" 
                  },
                  class: 'btn btn-sm btn-outline-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-info">
    <i class="bi bi-info-circle"></i> 投稿がまだありません。新規投稿を作成してください。
  </div>
<% end %>
